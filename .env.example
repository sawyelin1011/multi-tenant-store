# Node.js Server
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# Database
SQLITE_DB=db.sqlite

# API
SUPER_ADMIN_API_KEY=sk_test_admin123456
SUPER_ADMIN_EMAIL=admin@platform.local

# Security
ALLOWED_ORIGINS=http://localhost:3000

# Cloudflare Workers
CF_API_TOKEN=your_api_token_here
CF_ACCOUNT_ID=your_account_id

# Cloudflare D1 Database (via wrangler)
# Configured in wrangler.toml
DB_BINDING=DB

# Cloudflare KV Namespace (via wrangler)
CACHE_BINDING=CACHE
SESSIONS_BINDING=SESSIONS

# Cloudflare R2 Bucket (via wrangler)
R2_BINDING=UPLOADS
R2_ENDPOINT=https://account-id.r2.mtc.io
R2_ACCESS_KEY_ID=your_key_id
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=mtc-uploads
R2_CUSTOM_DOMAIN=r2.mtc.io

# Environment
ENVIRONMENT=development
