# Cloudflare Workers Environment Variables
# Copy to wrangler.toml [env.development] for local development

# JWT Secrets (MUST change these in production!)
ADMIN_JWT_SECRET=dev-admin-secret-key-change-in-production
TENANT_JWT_SECRET=dev-tenant-secret-key-change-in-production

# Bcrypt Configuration
BCRYPT_ROUNDS=10

# File Upload
MAX_FILE_SIZE=104857600

# Node Environment
NODE_ENV=development

# Database (D1 specific)
# The database binding is automatically provided by Wrangler
# binding name: DB

# Cache (KV specific)
# KV namespaces binding names: CACHE, SESSION
