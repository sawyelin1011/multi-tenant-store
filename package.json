{
  "name": "digital-commerce-platform",
  "version": "1.0.0",
  "description": "Multi-tenant digital commerce platform with plugin architecture",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "node --loader ts-node/esm src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "cf:dev": "wrangler dev --env development",
    "cf:deploy": "wrangler deploy --env production",
    "cf:deploy:staging": "wrangler deploy --env staging",
    "migrate": "node --loader ts-node/esm src/db/migrate.ts",
    "migrate:down": "node --loader ts-node/esm src/db/migrate.ts down",
    "db:generate": "drizzle-kit generate:sqlite --config drizzle.config.ts",
    "db:migrate:worker": "wrangler d1 migrations apply commerce-dev --env development",
    "db:migrate:worker:prod": "wrangler d1 migrations apply commerce-prod --env production",
    "db:migrate:worker:staging": "wrangler d1 migrations apply commerce-staging --env staging",
    "db:migrate:local": "node --loader ts-node/esm scripts/migrate-local.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "test": "vitest"
  },
  "keywords": [
    "commerce",
    "multi-tenant",
    "plugin-architecture",
    "digital-products"
  ],
  "author": "Platform Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "pg": "^8.10.0",
    "pg-promise": "^11.5.4",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "hono": "^3.12.0",
    "drizzle-orm": "^0.28.0",
    "better-sqlite3": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@cloudflare/workers-types": "^4.20240101.0",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "prettier": "^3.1.1",
    "vitest": "^1.0.4",
    "wrangler": "^3.26.0",
    "miniflare": "^3.20240101.0",
    "drizzle-kit": "^0.20.0",
    "@types/better-sqlite3": "^7.6.4"
  }
}
