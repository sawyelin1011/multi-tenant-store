{
  "name": "@mtc-platform/core",
  "version": "1.0.0",
  "description": "Multi-tenant MTC Platform with plugin architecture",
  "main": "dist/index.js",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "cf:dev": "wrangler dev --env development",
    "cf:build": "tsc --build",
    "cf:deploy": "wrangler deploy --env production",
    "cf:deploy:staging": "wrangler deploy --env staging",
    "migrate": "tsx src/db/migrate.ts",
    "db:migrate:up": "tsx src/db/migrate.ts up",
    "db:migrate:down": "tsx src/db/migrate.ts down",
    "db:migrate:status": "tsx src/db/migrate.ts status",
    "build:config": "cd packages/config && npm run build",
    "build:admin": "cd packages/admin && npm run build",
    "migrate:down": "tsx src/db/migrate.ts down",
    "db:generate": "drizzle-kit generate:sqlite --config drizzle.config.ts",
    "db:migrate:worker": "wrangler d1 migrations apply commerce-dev --env development",
    "db:migrate:worker:prod": "wrangler d1 migrations apply commerce-prod --env production",
    "db:migrate:worker:staging": "wrangler d1 migrations apply commerce-staging --env staging",
    "db:migrate:local": "tsx scripts/migrate-local.ts",
    "seed": "tsx scripts/seed-demo.ts",
    "seed:watch": "tsx watch scripts/seed-demo.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest run src/__tests__/integration",
    "test:api": "vitest run src/__tests__/api",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run lint && npm run test:coverage && npm run test:e2e",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write .",
    "format:check": "biome format --check .",
    "type-check": "tsc --noEmit",
    "build:sdk": "cd packages/plugin-sdk && npm run build",
    "build:cli": "cd packages/admin-cli && npm run build",
    "build:packages": "npm run build:sdk && npm run build:cli",
    "build:all": "node ./scripts/build-all.js",
    "dev:plugin": "cd packages/plugin-sdk && npm run dev",
    "dev:cli": "cd packages/admin-cli && npm run dev",
    "plugin:scaffold": "cd packages/admin-cli && npm run scaffold",
    "plugin:validate": "cd packages/admin-cli && npm run validate",
    "scaffold": "cd packages/admin-cli && npm run scaffold",
    "dev:both": "concurrently \"npm run dev:watch\" \"npm run cf:dev\"",
    "check:setup": "node scripts/check-setup.js",
    "brand:sync": "tsx scripts/rebrand.ts"
  },
  "keywords": [
    "commerce",
    "multi-tenant",
    "plugin-architecture",
    "digital-products"
  ],
  "author": "Platform Team",
  "license": "MIT",
  "dependencies": {
    "@mtc-platform/admin": "file:packages/admin",
    "@mtc-platform/config": "file:packages/config",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/semver": "^7.7.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.0.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "fs-extra": "^11.3.2",
    "glob": "^10.3.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "hono": "^3.12.0",
    "inquirer": "^13.0.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "ora": "^9.0.0",
    "pg": "^8.10.0",
    "pg-promise": "^11.5.4",
    "semver": "^7.7.3",
    "sharp": "^0.33.0",
    "uuid": "^9.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240101.0",
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.1",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "biome": "^0.3.3",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.20.0",
    "eslint": "^8.55.0",
    "faker": "^6.6.6",
    "miniflare": "^3.20240101.0",
    "prettier": "^3.1.1",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1",
    "wrangler": "^3.26.0"
  }
}
