{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "types": ["@cloudflare/workers-types", "node"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "moduleDetection": "force",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@mtc-platform/config": ["packages/config/dist/index.d.ts"],
      "@mtc-platform/config/*": ["packages/config/dist/*"],
      "@mtc-platform/plugin-sdk": ["packages/plugin-sdk/dist/index.d.ts"],
      "@mtc-platform/plugin-sdk/*": ["packages/plugin-sdk/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "packages",
    "examples",
    "scripts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/services/drizzle-delivery-service.ts",
    "src/services/drizzle-integration-service.ts",
    "src/services/drizzle-order-service.ts",
    "src/services/drizzle-payment-service.ts",
    "src/services/drizzle-plugin-service.ts",
    "src/services/drizzle-product-service.ts",
    "src/services/drizzle-product-type-service.ts",
    "src/services/drizzle-tenant-service.ts",
    "src/services/drizzle-workflow-service.ts",
    "src/config/worker-database.ts",
    "src/config/d1-database.ts",
    "src/middleware/worker-auth.ts",
    "src/middleware/worker-error-handler.ts",
    "src/middleware/worker-tenant-resolver.ts"
  ]
}
